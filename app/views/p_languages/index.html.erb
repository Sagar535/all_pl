<p id="notice"><%= notice %></p>

<h1>P Languages</h1>

<%= form_tag p_languages_upload_path do %>
    <%= submit_tag "Import Languages" %>
  <% end %>

  <%= form_tag p_languages_destroy_all_path do %>
    <%= submit_tag "Delete All Languages" %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>SN</th>
      <th>Name</th>
      <th>Wiki link</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @p_languages.each_with_index do |(p_language), index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= p_language.name %></td>
        <td><%= p_language.wiki_link %></td>
        <td><%= link_to 'Show', p_language %></td>
        <td><%= link_to 'Edit', edit_p_language_path(p_language) %></td>
        <td><%= link_to 'Destroy', p_language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New P Language', new_p_language_path %>
